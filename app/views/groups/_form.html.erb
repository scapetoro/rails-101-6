<%= form_for @group do |f| %>

<div class="form-group">
    <div class="form-group string optional">
        <%= f.label "影片名称", :class => "string optional control-label" %>
        <%= f.text_field :movie, :class => "string optional form-control" %>
    </div>

    <div class="form-group string optional">
        <%= f.label "影片简介", :class => "string optional control-label" %>
        <%= f.text_area :description, :class => "string optional form-control" %>
    </div>
</div>
<%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
<% end %>
