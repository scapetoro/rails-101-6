<div class="col-md-12">
  <div class="group">

    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@group) %>
        <label class="label label-success">电影群友</label>
        <%= link_to("退出电影群", quit_group_path(@group), method: :post, class: "btn btn-default") %>
      <% else %>
        <label class="label label-warning">不是电影群友</label>
        <% if user_signed_in? %>
        <%= link_to("加入电影群", join_group_path(@group), method: :post, class: "btn btn-default") %>
        <% end %>
      <% end %>
    </span>

    <%= link_to("Write a Review", new_group_review_path(@group), class: "btn btn-default pull-right")%>
    <% if current_user && current_user == @group.user %>
      <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @group.movie %></h2>
  <p><%= @group.description %></p>

  <table class="table">
    <thead>
      <tr>
         <th>评论内容</th>
         <th>发表者</th>
         <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= simple_format(review.content) %></td>
          <td><%= review.user.email %></td>
          <td><%= review.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= will_paginate @reviews %>
  </div>
</div>
